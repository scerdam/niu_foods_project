<div class="container">
  <h1 class="fw-bold my-5">Lista de Restaurantes</h1>

  <% @restaurants.each do |restaurant| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title fw-bold"><%= restaurant.name %></h5>
        <p class="card-text"><span class="text-muted">Status:</span>
          <%= generate_status_badge(restaurant.status) %>
        </p>
        <p class="card-text"><span class="text-muted">Last_updated:</span> <%= niufoods_datetime_format(restaurant.last_updated_at) %></p>
        <ul class="list-group">
          <% restaurant.devices.each do |device| %>
            <li class="list-group-item">
              <p class="fw-bold"><%= device.name %></p>
              <%= generate_status_badge(device.status) %> <span class="ms-2 text-muted">Last_updated:</span> <%= niufoods_datetime_format(device.last_updated_at) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>